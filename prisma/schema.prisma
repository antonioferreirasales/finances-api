generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String      @id @default(uuid())
  name          String
  email         String      @unique
  password_hash String
  created_at    DateTime    @default(now())
  Bill          Bill[]
  BillShare     BillShare[]

  @@map("users")
}

model Bill {
  id String @id @default(uuid())

  user_id    String
  user       User     @relation(fields: [user_id], references: [id])
  type       Int
  billTypeId BillType @relation(fields: [type], references: [id])

  description  String?
  urgency      Level
  importance   Level
  total_value  Decimal
  net_value    Decimal
  delay        Int
  pdf_url      String
  receipt      String
  is_recurring Boolean
  is_active    Boolean
  due_date     DateTime
  created_at   DateTime    @default(now())
  finished_at  DateTime
  cancelled_at DateTime
  BillShare    BillShare[]

  @@map("bill")
}

model BillType {
  id          Int    @id @default(autoincrement())
  description String
  Bill        Bill[]

  @@map("bill_type")
}

model BillShare {
  id      String @id @default(uuid())
  bill    Bill   @relation(fields: [bill_id], references: [id])
  bill_id String
  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  percentage Decimal
  quantity   Int

  @@map("bill_share")
}

enum Level {
  High
  Medium
  Low
}
